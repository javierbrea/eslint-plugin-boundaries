{
  "name": "js-boundaries-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Monorepo for js-boundaries packages",
  "author": "Javier Brea",
  "packageManager": "pnpm@9.4.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "eslint": "eslint",
    "lint": "eslint *.* .vscode --no-warn-ignored",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "check:spell": "cspell --quiet *.* .vscode/*.* .husky/*.* .github/*.* docs/*.*"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "cspell": "8.15.5",
    "husky": "9.1.6",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "nx": "20.1.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.mjs": "eslint",
    "*.cjs": "eslint",
    "*.json": "eslint",
    "*.md": "eslint",
    "*.*": "cspell --no-must-find-files"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
