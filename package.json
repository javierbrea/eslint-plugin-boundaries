{
  "name": "@boundaries/repo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Monorepo for @boundaries packages",
  "author": "Javier Brea",
  "packageManager": "pnpm@9.4.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "eslint": "eslint",
    "lint": "eslint *.* .vscode scripts --no-warn-ignored",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "check:spell": "cspell --quiet *.* .vscode/*.* .husky/*.* .github/**/*.* docs/**/*.* scripts/**/*.*"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "cross-env": "10.1.0",
    "cspell": "9.2.1",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "30.2.0",
    "lint-staged": "16.2.3",
    "nx": "21.6.3",
    "typescript": "5.6.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,json,md}": "node scripts/lint-staged-file.js",
    "*.*": "cspell --no-must-find-files"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
