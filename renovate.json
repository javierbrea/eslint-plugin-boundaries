{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>javierbrea/renovate-config"
  ],
  "constraints": {
    "pnpm": "9.4.0",
    "node": "22.4.0"
  },
  "baseBranches": [
    "release"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchFileNames": [
        "package.json"
      ],
      "matchPackageNames": [
        "chalk"
      ],
      "allowedVersions": "<5.0.0"
    }
  ]
}
